<% provide(:title, @title) %>
<div class="row">
    <aside class="span4">
    <section>
    <%= gravata_for @user %>
    <h1><%= @user.name %></h1>
    <span><%= link_to "view my profile",@user%> </span>
    <span>Microposts: <%= @user.microposts.count %></span>
    </section>
    <section>
    <%= render 'shared/stats' %>
    <% if @users and  @users.any?%>
        <div class="user_avatars">
            <% @users.each do |user| %>
                <%= link_to gravata_for(user,size: 30), user %>
            <% end %>
    <% end %>
    </section>
    </aside>
    <div class="span8">
        <h3><%= @title %></h3>
        <% if @users and @users.any? %>
            <ul class="uses">
                <%= render @users %>
            </ul>
            <%= will_paginate%>
        <% end %>
    </div>
</div>
