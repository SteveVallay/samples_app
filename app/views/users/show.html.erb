<%=provide(:title,@user.name) %>
<div class ="row">
<aside>
<h1>
    <%= @user.name %>
    <%= gravata_for @user %>
</h1>
<%= @user.email %>
</aside>
<div class="span8">
    <% if @user.microposts.any? %>
        <h3>Microposts (<%= @user.microposts.count %>>)</h3>
        <ol class="microposts">
            <% render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
    <% end %>
</div>
</div>
